{
  "rules": {
    "sessions": {
      "$canvasId": {
        "cursors": {
          ".read": "auth != null",
          "$userId": {
            ".write": "(auth != null && auth.uid === $userId) || !newData.exists()"
          }
        },
        "presence": {
          ".read": "auth != null",
          "$userId": {
            ".write": "(auth != null && auth.uid === $userId) || !newData.exists()"
          }
        },
        "dragging": {
          ".read": "auth != null",
          "$shapeId": {
            ".write": "auth != null"
          }
        },
        "selections": {
          ".read": "auth != null",
          "$userId": {
            ".write": "(auth != null && auth.uid === $userId) || !newData.exists()"
          }
        }
      }
    }
  }
}

