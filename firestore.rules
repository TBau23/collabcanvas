rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // CollabCanvas MVP Security Rules
    // All authenticated users can access the main canvas
    
    match /canvases/{canvasId} {
      // Allow authenticated users to read canvas metadata
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      
      // Cursors subcollection
      match /cursors/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Objects (shapes) subcollection
      match /objects/{objectId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null;
        allow delete: if request.auth != null;
      }
      
      // Presence subcollection
      match /presence/{userId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}